<application>

<name> Frequency Visualisation All </name>

    <!-->  

        Visualisation Tool & Windows. 

    <!-->
    <module>
        <name> frequencyVisualisation </name>
        <parameters> --name /tempVisualiser </parameters>
        <node> icub </node>
    </module>

    <module>
        <name> yarpview </name>
        <parameters> --x 100 --y 100 --h 320 --w 240 --r 33 --name /tempView </parameters>
        <node> icub </node>
    </module>


